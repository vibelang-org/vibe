{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vibe",
  "scopeName": "source.vibe",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#decorators" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#tsblock" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vibe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vibe",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vibe",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vibe",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.vibe",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vibe",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.vibe",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.vibe",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.vibe",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.vibe",
          "match": "-?\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "entity.name.function.decorator.vibe",
          "match": "@(description|param)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibe",
          "match": "\\b(if|else|for|while|return|in)\\b"
        },
        {
          "name": "keyword.declaration.vibe",
          "match": "\\b(let|const|function|tool|model|import|export|from)\\b"
        },
        {
          "name": "keyword.ai.vibe",
          "match": "\\b(vibe|do|ask)\\b"
        },
        {
          "name": "keyword.context.vibe",
          "match": "\\b(forget|verbose|compress|cache|local|default)\\b"
        },
        {
          "name": "keyword.operator.logical.vibe",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.vibe",
          "match": "\\b(text|json|prompt|boolean|number)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vibe",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.vibe",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.vibe",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.vibe",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.range.vibe",
          "match": "\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vibe",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "tsblock": {
      "patterns": [
        {
          "name": "meta.embedded.block.typescript.vibe",
          "begin": "\\b(ts)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "keyword.other.tsblock.vibe" }
          },
          "end": "\\}",
          "patterns": [
            {
              "name": "meta.tsblock.params.vibe",
              "begin": "\\(",
              "end": "\\)",
              "patterns": [
                { "include": "#identifiers" }
              ]
            },
            {
              "name": "meta.tsblock.body.vibe",
              "begin": "\\{",
              "end": "(?=\\})",
              "contentName": "meta.embedded.block.typescript",
              "patterns": [
                { "include": "source.ts" }
              ]
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.vibe",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
